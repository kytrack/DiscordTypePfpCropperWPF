<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mozgatható és Méretezhető Négyzet" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Canvas x:Name="MainCanvas" Background="Gray">
            <!-- Kép -->
            <Image x:Name="BackgroundImage" Source="nemdohanyzonoitulaj.jpg"
                    Canvas.Left="50" Canvas.Top="50"/>

            <!-- Mozgatható négyzet -->
            <Rectangle x:Name="MovableRect" Width="100" Height="100" Fill="Red"
                       Stroke="Black" StrokeThickness="2"
                       Canvas.Left="150" Canvas.Top="150"/>
        </Canvas>

        <!-- Méretet állító Slider -->
        <Slider x:Name="SizeSlider" Grid.Row="1" Minimum="50" Maximum="300" Value="100"
                Margin="20" Width="200"/>
    </Grid>
</Window>
